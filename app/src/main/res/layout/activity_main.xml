<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F3E5F5"
    tools:context=".MainActivity">

    <!-- Tarjeta con imagen de perfil -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/perfil"
            android:contentDescription="Imagen de Perfil"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <!-- Tarjeta con información del programador -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nombre -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="#7B1FA2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exequiel Venegas"
                android:textSize="16sp" />

            <!-- Correo electrónico -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo electrónico"
                android:textColor="#7B1FA2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="evenegas4414@gmail.com"
                android:textSize="16sp" />

            <!-- Lenguajes de programación -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lenguajes de programación"
                android:textColor="#7B1FA2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Java, Kotlin y Javascript"
                android:textSize="16sp" />

            <!-- Años de experiencia -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Años de experiencia"
                android:textSize="18sp"
                android:textColor="#7B1FA2"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16sp" />

            <!-- Resumen -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resumen"
                android:textColor="#7B1FA2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soy un programador con 1 año de experiencia en el desarrollo de aplicaciones móviles. He trabajado en diversos proyectos, donde he adquirido habilidades en el desarrollo de aplicaciones nativas para Android utilizando Java y Kotlin."
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botón para ir a ContactActivity -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTACTAR"
        android:layout_marginTop="16dp"
        android:onClick="navigateToContactActivity" />

</LinearLayout>
