<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="#F3E5F5"
    tools:context=".MainActivity">

    <!-- LinearLayout vertical para contener la tarjeta de imagen y el botón -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Tarjeta con imagen de perfil -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/perfil"
                android:contentDescription="Imagen de perfil"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <!-- Botón para ir a ContactActivity -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTACTAR"
            android:onClick="navigateToContactActivity" />

    </LinearLayout>

    <!-- Tarjeta con información del programador -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nombre -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="#7B1FA2"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exequiel Venegas"
                android:textSize="14sp" />

            <!-- Correo electrónico -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo electrónico"
                android:textSize="16sp"
                android:textColor="#7B1FA2"

                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="evenegas4414@gmail.com"
                android:textSize="14sp" />

            <!-- Lenguajes de programación -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lenguajes de programación"
                android:textColor="#7B1FA2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Java, Kotlin y Javascript"
                android:textSize="14sp" />

            <!-- Años de experiencia -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Años de experiencia"
                android:textColor="#7B1FA2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="14sp" />

            <!-- Resumen -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resumen"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#7B1FA2"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soy un programador con 1 año de experiencia en el desarrollo de aplicaciones móviles. He trabajado en diversos proyectos, donde he adquirido habilidades en el desarrollo de aplicaciones nativas para Android utilizando Java y Kotlin."
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
